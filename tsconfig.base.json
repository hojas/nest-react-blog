      "@nx-blog/server/modules/auth": [
        "libs/server/modules/auth/src/index.ts"
      ],
      "@nx-blog/server/modules/category": [
        "libs/server/modules/category/src/index.ts"
      ],
      "@nx-blog/server/modules/comment": [
        "libs/server/modules/comment/src/index.ts"
      ],
      "@nx-blog/server/modules/prisma": [
        "libs/server/modules/prisma/src/index.ts"
      ],
      "@nx-blog/server/modules/role": [
        "libs/server/modules/role/src/index.ts"
      ],
      "@nx-blog/server/modules/shared": [
